datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

generator client {
  provider = "prisma-client-js"
}

model Experience {
  id        Int     @id @default(autoincrement())
  title     String
  company   String
  start     DateTime
  end       DateTime
  desc      String?
  role      Roles[]
  skills    String
  published Boolean @default(false)
  author    User?   @relation(fields: [authorId], references: [id])
  authorId  Int?
}

model Roles {
    id      Int     @id @default(autoincrement())
    exp     Experience? @relation(fields: [expid], references: [id])
    expid   Int
    content String
    createdAt  DateTime   @default(now())
    updatedAt  DateTime   @updatedAt
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String
  pwd   String
  exp   Experience[]
}