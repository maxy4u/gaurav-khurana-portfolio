{
  "name": "gaurav-khurana-portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "postbuild": "next-sitemap --config=sitemap.config.js",
    "start": "next start",
    "start:prod": "next start -p  80",
    "lint": "eslint . --fix",
    "format": "prettier ./**/*.{js,ts,tsx,css,md,json} --config ./.prettierrc --write",
    "formatmd": "prettier --write",
    "success-message": "echo \n\n\n🚀  Everything is awesome. 🚀\n\n🖥️  Auto checking completed, ready to deploy.🖥️\n\n☁️  Run: git push ☁️",
    "prepare": "husky install",
    "codegen": "graphql-codegen --config codegen.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "post-commit": "npm run success-message",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,html}": [
      "npm run lint",
      "npm run format",
      "git add ."
    ],
    "*.{md}": [
      "npm run formatmd",
      "git add"
    ]
  },
  "commitlint": {
    "rules": {
      "references-empty": [
        2,
        "always"
      ]
    },
    "parserPreset": {
      "parserOpts": {
        "issuePrefixes": [
          "ISSUE-"
        ]
      }
    }
  },
  "dependencies": {
    "@prisma/client": "^5.12.1",
    "@tanstack/react-query": "^5.29.0",
    "micro": "^9.3.4",
    "apollo-server-micro": "^3.10.0",
    "axios": "^0.27.2",
    "babel-plugin-inline-react-svg": "^2.0.1",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "micro-cors": "^0.1.1",
    "next": "^14.0.0",
    "next-sitemap": "^3.1.21",
    "plaiceholder": "^3.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^5.0.2",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/typescript-operations": "^4.2.0",
    "@graphql-codegen/typescript-react-query": "^6.1.0",
    "@types/graphql-iso-date": "^3.4.3",
    "@types/micro-cors": "^0.1.2",
    "@types/node": "18.6.3",
    "@types/react": "18.0.15",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "autoprefixer": "^10.4.8",
    "eslint": "^8.22.0",
    "eslint-config-next": "12.2.3",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard-with-typescript": "^22.0.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-n": "^15.2.4",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "graphql-iso-date": "^3.6.1",
    "husky": "^8.0.1",
    "postcss": "^8.4.14",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "prisma": "^5.12.1",
    "tailwindcss": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^4.7.4"
  }
}
